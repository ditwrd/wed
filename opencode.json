{
  "$schema": "https://opencode.ai/config.json",
  "mcp": {
    "playwright": {
      "type": "local",
      "enabled": true,
      "command": [
        "npx",
        "-y",
        "@executeautomation/playwright-mcp-server"
      ]
    },
    "sequential-thinking": {
      "type": "local",
      "enabled": false,
      "command": [
        "npx",
        "-y",
        "@modelcontextprotocol/server-sequential-thinking"
      ]
    },
    "memory": {
      "type": "local",
      "enabled": true,
      "command": [
        "npx",
        "-y",
        "@modelcontextprotocol/server-memory"
      ]
    },
    "filesystem": {
      "type": "local",
      "enabled": true,
      "command": [
        "npx",
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "~/projects/personal/wed"
      ]
    }
  }
}
